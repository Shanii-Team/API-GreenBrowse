{
  "name": "greenbrowse-api",
  "version": "1.0.0",
  "description": "API for GreenBrowse Chrome extension data",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "backoffice:dev": "cd backoffice && npm run dev",
    "backoffice:build": "cd backoffice && npm run build",
    "backoffice:serve": "cd backoffice && npm run serve",
    "dev:all": "concurrently \"npm run dev\" \"npm run backoffice:dev\"",
    "deploy": "bash deploy.sh",
    "build": "cd backoffice && npm install && npm run build",
    "pm2:start": "pm2 start server.js --name greengrows-api",
    "pm2:stop": "pm2 stop greengrows-api",
    "pm2:restart": "pm2 restart greengrows-api"
  },
  "dependencies": {
    "express": "4.18.2",
    "cors": "2.8.5",
    "body-parser": "1.20.2"
  },
  "devDependencies": {
    "nodemon": "3.0.1",
    "concurrently": "^8.0.0"
  }
}